services:
  mongo:
    image: mongo:7.0
    ports:
      - "27017:27017"
    volumes:
      - mongo-data:/data/db

  backend-server:
    build:
      context: ..
      dockerfile: server/Dockerfile
    volumes:
      - ../server:/app/server
      - /app/server/node_modules
    environment:
      - MONGODB_URI=mongodb://mongo:27017/scem-evMan
      - PORT=8080
      - AUTH_SECRET=supersecret
    ports:
      - "8080:8080"
    depends_on:
      - mongo

  seed:
    build:
      context: ..
      dockerfile: server/Dockerfile
    command: node scripts/seed.js
    volumes:  
      - ../server:/app/server
      - /app/server/node_modules
    environment:
      - MONGODB_URI=mongodb://mongo:27017/scem-evMan
    depends_on:
      - mongo

volumes:
  mongo-data:
